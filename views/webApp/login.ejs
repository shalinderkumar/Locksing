<script type="text/javascript">
var baseUrl = '<%=baseUrl%>'
var emailRegex=(/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/);
var swiper = new Swiper('.swiper-container', {
    pagination: '.swiper-pagination',
    slidesPerView: 'auto',
    autoplay: 4000,
    paginationClickable: true,
    spaceBetween: 0
}); 

function signIn() {
    $('.error').html('');
    var email = $.trim($('#email').val());
    var password = $('#password').val(); 
    var rememberMe = 0; 
    if (email ==""){
        $('.error').show()
        $('#emailError').html('Email is required.')
    }else if(!emailRegex.test(email)){
        $('.error').show()
        $('#emailError').html("Please enter valid email.");
        return false;
    }else if (password ==""){
        $('.error').show()
        $('#passwordError').html("Password is required.");
        return false;
    } else if(password.length < 8){
        $('.error').show()
       $('#passwordError').html("Password must be greater than or equal to 8 characters");
        return false;
     } else if(password.length > 30){
        $('.error').show()
        $('#passwordError').html("Password should not be greater than 30 characters");
        return false;
    }else{
        if(document.getElementById('rememberMe').checked) {
            rememberMe = 1;
        }
        var $url = baseUrl+'webApp/signIn';
        $.post($url, {email: email, password: password, rememberMe: rememberMe}, function(data){
