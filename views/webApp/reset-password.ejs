<script type="text/javascript">
var baseUrl = '<%=baseUrl%>'
var swiper = new Swiper('.swiper-container', {
    pagination: '.swiper-pagination',
    slidesPerView: 'auto',
    autoplay: 4000,
    paginationClickable: true,
    spaceBetween: 0
});  
function setPassword() {
    $('.error').html('');
    var new_password = $('#new_password').val();
    var confirm_password = $('#confirm_password').val();
    var token        = $('#token').val();
    if (new_password == "") {
        $('.error').show();
        $('#new_password_error').html('Enter new password.');
        return false;
    }else if(new_password.length < 8){
        $('.error').show();
        $('#new_password_error').html('Enter minimum eight characters.');
        return false;
    }else  if (confirm_password == "") {
        $('.error').show();
        $('#confirm_password_error').html('Enter confirm password.');
        return false;
    }else if(confirm_password.length < 8){
        $('.error').show();
        $('#confirm_password_error').html('Enter minimum eight characters.');
    }else if(new_password != confirm_password){
        $('.error').show();
        $('#confirm_password_error').html('Passwords do not match.');
    }else{
        var url = baseUrl+'changePassword';
        var data = {
            token:token,
            password:new_password
        };
        $.ajax({
            type: 'POST',
            url: url,
            data: data,
            success: function (data){
               
                alert('Your password has been changed successfully.');
                // setTimeout(() => {
                    location.reload();
                // }, 2000);  
            },
            error: function (data) {
                location.reload()
            }
        }); 
    }
} 
</script>
